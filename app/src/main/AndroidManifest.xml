<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="betianaminio.twitterlogin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="FABRIC_API_KEY"
            android:value="YOUR_FABRIC_API_KEY" />

        <meta-data android:name="betianaminio.twitterlogin.configurations.GlideConfiguration"
            android:value="GlideModule"/>

        <activity android:name=".views.MainActivity"></activity>

    </application>

</manifest>